<AnchorPane id="AnchorPane" fx:id="login" prefHeight="500.0" prefWidth="400.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="um_lms_javafx.ui.login.LoginController">
    <stylesheets>
        <URL value="@login.css" />
    </stylesheets>
   <children>
      <Pane layoutX="2.0" layoutY="4.0" prefHeight="500.0" prefWidth="400.0">
         <children>
            <VBox layoutX="66.0" layoutY="89.0" prefHeight="230.0" prefWidth="269.0">
               <children>
                  <VBox prefHeight="46.0" prefWidth="292.0">
                     <children>
                        <Label text="Email">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                        </Label>
                        <TextField prefHeight="25.0" prefWidth="286.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="46.0" prefWidth="292.0">
                     <children>
                        <Label contentDisplay="CENTER" prefHeight="17.0" prefWidth="307.0" text="Password">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                        </Label>
                        <PasswordField />
                     </children>
                  </VBox>
                  <HBox>
                     <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonActionPerformed" text="Login" />
                        <Button fx:id="adminButton" mnemonicParsing="false" onAction="#adminButtonActionPerformed" text=" Admin" />
                     </children>
                  </HBox>
                  <Hyperlink fx:id="linkToSignUp" text="Don't have an account? Sign up now." />
               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
